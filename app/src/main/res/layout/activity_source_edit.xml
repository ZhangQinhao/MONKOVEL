<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_book_source_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="bookSourceUrl">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tie_book_source_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_book_source_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="bookSourceName">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tie_book_source_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_ruleSearchUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ruleSearchUrl">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tie_ruleSearchUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_ruleSearchList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ruleSearchList">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tie_ruleSearchList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_ruleSearchName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ruleSearchName">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tie_ruleSearchName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_ruleSearchAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ruleSearchAuthor">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tie_ruleSearchAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_ruleSearchKind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ruleSearchKind">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tie_ruleSearchKind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_ruleSearchLastChapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ruleSearchLastChapter">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tie_ruleSearchLastChapter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_ruleSearchCoverUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ruleSearchCoverUrl">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tie_ruleSearchCoverUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_ruleSearchNoteUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ruleSearchNoteUrl">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tie_ruleSearchNoteUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_ruleBookName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ruleBookName">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tie_ruleBookName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_ruleBookAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ruleBookAuthor">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tie_ruleBookAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_ruleCoverUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ruleCoverUrl">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tie_ruleCoverUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_ruleChapterUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ruleChapterUrl">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tie_ruleChapterUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_ruleIntroduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ruleIntroduce">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tie_ruleIntroduce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_ruleChapterList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ruleChapterList">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tie_ruleChapterList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_ruleChapterName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ruleChapterName">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tie_ruleChapterName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_ruleContentUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ruleSearchAuthor">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tie_ruleContentUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_ruleBookContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ruleBookContent">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tie_ruleBookContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>